<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/row_content_layout_style">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editview_row_item_status_rbtgroup"
        android:orientation="horizontal"
        style="@style/label_row_style">

        <RadioButton
            android:id="@+id/editview_row_item_rbtn_status1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/trek_item_status_1"
            style="@style/field_row_style" />
        <RadioButton
            android:id="@+id/editview_row_item_rbtn_status2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/trek_item_status_2"
            style="@style/field_row_style"/>
        <RadioButton
            android:id="@+id/editview_row_item_rbtn_status3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/trek_item_status_3"
            style="@style/field_row_style"/>

        <android.support.v4.widget.Space
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/editview_row_item_was_used_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/term_was_used"
            style="@style/field_row_style" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/label_row_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:text="@string/term_notes" />

        <Button
            android:id="@+id/editview_row_item_private_btn"
            style="@style/field_row_style"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/term_add_to_items" />

    </LinearLayout>

    <EditText
        android:id="@+id/editview_row_item_notes_fld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryTransparent"
        android:inputType="textMultiLine"
        android:overScrollMode="always"
        android:gravity="top|left"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:lines="6"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:scrollHorizontally="false"
        style="@style/field_row_style" />

</LinearLayout>