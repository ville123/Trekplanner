<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/main_header_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/header_layout_style">

    <!-- horizontal line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/colorPrimaryDark"/>

    <ImageView
        android:id="@+id/view_header_image"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/backpack"
        android:layout_marginTop="@dimen/margin"
        style="@style/image_style"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal|bottom">

        <TextView
            android:id="@+id/view_header_action1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/header_text_style"/>

        <android.support.v4.widget.Space
            android:layout_width="@dimen/element_space"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/view_header_action2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/header_text_style"/>

    </LinearLayout>

</LinearLayout>