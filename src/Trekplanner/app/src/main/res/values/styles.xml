<resources>

    <!-- Base application theme. -->
    <style name="AppTheme_Fall" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/darker_gray</item>
        <item name="android:textColorHighlight">@color/colorPrimaryDark</item>
    </style>

    <style name="header_layout_style">
        <item name="android:layout_marginTop">@dimen/margin</item>
    </style>

    <style name="header_text_style">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/header_textsize</item>
    </style>

    <style name="floatingActionButton">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="toolbar">
        <item name="android:textSize">@dimen/header_textsize</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="main_layout_background">
        <item name="android:background">@drawable/fall1</item>
        <item name="android:backgroundTint">#80FFFFFF</item>
        <item name="android:backgroundTintMode">src_over</item>
    </style>

    <style name="splash">
        <item name="android:background">@drawable/fall1</item>
    </style>

    <style name="splash_icon">
        <item name="android:layout_width">152dp</item>
        <item name="android:layout_height">152dp</item>
        <item name="android:background">@drawable/icon2</item>
    </style>

    <style name="splash_text">
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:background"></item>
        <item name="android:textSize">@dimen/main_title_text_size</item>
    </style>

    <style name="splash_subtext">
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:background"></item>
        <item name="android:textSize">@dimen/main_title_text_size</item>
    </style>

    <style name="row_content_layout_style">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:paddingLeft">@dimen/margin</item>
        <item name="android:paddingRight">@dimen/margin</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
    </style>

    <style name="row_header_layout_style">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@color/colorPrimaryDarkTransparent</item>
    </style>

    <style name="row_header_inner_layout_style">
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
    </style>

    <style name="edit_layout_style">
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:layout_marginTop">@dimen/line_height</item>
        <item name="android:paddingTop">@dimen/margin</item>
        <item name="android:paddingRight">@dimen/margin</item>
        <item name="android:paddingLeft">@dimen/margin</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="label_row_style">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="field_row_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:buttonTint">@android:color/white</item>
        <item name="android:spinnerStyle">@style/spinnerStyle</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
        <item name="android:textSize">@dimen/normal_textsize</item>
        <item name="android:textCursorDrawable">@null</item><!-- sets the cursor to white -->
    </style>

    <style name="spinnerStyle">
        <item name="android:background"></item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="icon_style">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="icon_style_small">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

</resources>
